<header class="shadow-sm" style="background-color: #fff;">
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top shadow-sm pr-5 pl-5" id="header-height">
      <%= link_to(image_tag("logo.png", :alt => ""), root_url, id: 'logo',class: "navbar-brand") %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to about_path ,class: 'nav-link' do %>
              使い方
            <% end %>
          </li>
          <% if logged_in? %>
            <li class="nav-item">
              <%= link_to notifications_path ,class: 'nav-link' do %>
                通知
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_path ,class: 'nav-link' do %>
                ユーザー一覧
              <% end %>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                チャット
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to 'チャットを探す', chat_rooms_path ,class: 'dropdown-item',method: :get %>
                <%= link_to('参加チャット', chatlists_user_path(current_user) ,class: 'dropdown-item',method: :get) %>
                <%= link_to '個人チャット履歴', dmlists_user_path(current_user) ,class: 'dropdown-item',method: :get %>
              </div>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                アカウント
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to 'プロフィール', current_user ,class: 'dropdown-item', status: "ツイート履歴"%>
                <%= link_to '編集', edit_user_path(current_user) ,class: 'dropdown-item'%>
                <%= link_to 'ログアウト', logout_path ,method: :delete ,class: 'dropdown-item'%>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to '新規登録', signup_path ,class: 'nav-link'%>
            </li>
            <li class="nav-item">
              <%= link_to 'ログイン', login_path ,class: 'nav-link'%>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
 </header>



