<% provide(:title, "プロフィール") %>
<div class="container">
  <h3 class="title-profile mt-5">プロフィール</h3>
  <div class="row mt-3 mb-5 mr-0 ml-0">
    <div class="col-md-4">
      <div class="user-picture-box">
        <%= gravatar_for @user, size: 120, cl: "gravatar user-picture" %>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
        <% if current_user == @user %>
          <div class="account-edit"><i class="fas fa-arrow-circle-right mr-2"></i><%= link_to "プロフィール編集", edit_user_path(@user) %></div>
        <% end %>
        <!-- チャット -->
        <% unless @user.id == current_user.id %>
          <% if (current_user.followed_by? @user) && (@user.followed_by? current_user)  %>
            <% if @is_room == true %>
              <p class="user-show-room"><a href="/dm_rooms/<%= @room_id %>" class="btn btn-primary btn-lg">チャットへ</a>
            <% else %>
              <%= form_with(model:@room) do |f| %>
                <%= f.fields_for @entry do |e| %>
                  <%= e.hidden_field :user_id, value: @user.id %>
                <% end %>
                <%= f.submit "チャットを始める", class:"btn btn-primary btn-lg user-show-chat",id: "start-chat"%>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
        <!-- チャット -->
      </div>
    </div>
    <div class="col-md-8">
      <%= render 'follow_form' if logged_in? %>
      <p class="show-user-head p-2 mb-3">名前</p>
      <h4 class="show-user-name pl-3"><%= @user.name %></h4>
      <p class="show-user-head p-2 mb-3">性別</p>
      <p class="pl-3"><%= @user.sex %></p>
      <div class="show-user-introduction">
        <p class="show-user-head p-2 mb-3">自己紹介</p>
        <p class="pl-3"><%= @user.introduction %></p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <div class="form-group col-md-4">
        <!-- <label for="inputState">State</label> -->

        <%= form_with(url: user_path(@user),method: :get,id: "profile-status",remote: true)do |f|%>
          <%= hidden_field_tag :id, @user.id %>
          <%= select_tag :status, options_for_select(["ツイート履歴", "いいねしたツイート", "参加予定のオフ会","登録チャット"],@selected_status), class: "form-control select-drop" %>
        <% end %>
        <script>
          $(document).ready(function(){
            $(".select-drop").change(function(){
              $('#profile-status').submit();
            });
          });
        </script>
      </div>
      <section id="like-tweet-group">
        <% if !@like_tweet.nil? %>
          <h3 class="mt-5">いいねしたツイート (<%= @like_tweet.count %>)</h3>
          <ul class="like-tweet">
            <%= render @like_tweet %>
          </ul>
          <%= paginate @like_tweet,params: {status: "いいねしたツイート"} %>
        <% end %>
      </section>

      <section id="tweets-group">
        <% if !@tweets.nil? %>
          <h3 class="mt-5">ツイート (<%= @user.tweets.count %>)</h3>
          <ul class="tweets">
            <%= render @tweets %>
          </ul>
          <%= paginate @tweets,params: {status: "ツイート履歴"} %>
        <% end %>
      </section>
    </div>
  </div>
</div>