<% provide(:title, "プロフィール") %>
<div class="container">
  <h3 class="title-profile mt-5">プロフィール</h3>
  <div class="row">
    <div class="col-md-4">
      <div class="user-picture-box">
        <%= gravatar_for @user, size: 120, cl: "gravatar user-picture" %>
      </div>
    </div>
    <div class="col-md-8">
      <h4 class="show-user-name"><%= @user.name %></h4> <%= @user.sex %>
      <div>
        <%= @user.introduction %>
      </div>
      <% if current_user == @user %>
        <div class="account-edit"><%= link_to "プロフィール編集", edit_user_path(@user) %></div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <div class="form-group col-md-4">
        <label for="inputState">State</label>
        <select id="inputState" class="form-control">
          <option selected>ツイート履歴</option>
          <option>参加予定のオフ会</option>
          <option>登録チャット</option>
        </select>
      </div>
      <% if @user.tweets.any? %>
        <h3 class="mt-5">ツイート (<%= @user.tweets.count %>)</h3>
        <ul class="tweets">
          <%= render @tweets %>
        </ul>
        <%= paginate @tweets %>
      <% end %>
    </div>
  </div>
</div>