<% provide(:title, "チャット") %>
<div class="row mt-5">
  <div class="col-md-4">
    <h3><%= @company.name %></h3>
    <h4 class="chat-user-name  "><i class="fas fa-comment mr-2 chat-head"></i><%= @area.city %>のチャット</h4>
  </div>
  <hr>
  <div class="chats col-md-8 pl-5 pr-5 pt-5">
    <!--チャットコメント部分-->
    <div class="row" id="chat-content">
      <%= render('dm_messages/message') %>
    </div>
    <!--ここまで-->
    <div class="posts">
      <%= form_with(model:@message, remote: true) do |f| %>
        <%= f.hidden_field :chat_room_id, value: @room.id %>
        <div class="row">
          <div class="col-md-8"><%= f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %></div>
          <div class="col-md-4"><%= f.submit "投稿",class: 'form-submit'%></div>
        </div>
      <% end %>
    </div>

  </div>
</div>